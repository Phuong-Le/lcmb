{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/nf-core/lcmb/master/nextflow_schema_conpair.json",
    "title": "nf-core/lcmb pipeline parameters",
    "description": "postprocessing of LCMB data",
    "type": "object",
    "$definitions": {
        "conpair_options": {
            "title": "Options specific to conpair subworkflow",
            "type": "object",
            "fa_icon": "fas fa-terminal",
            "required": ["concordance_threshold", "contamination_threshold_samples", "contamination_threshold_match"],
            "properties": {
                "concordance_threshold": {
                    "type": "number",
                    "description": "threshold above which 2 samples are considered from the same donor",
                    "default": 90
                },
                "contamination_threshold_samples": {
                    "type": "number",
                    "description": "contamination threshold above which a sample of interest is considered contaminated",
                    "default": 0.3
                },
                "contamination_threshold_match": {
                    "type": "number",
                    "description": "contamination threshold above which a match normal sample is considered contaminated",
                    "default": 5
                }
            }
        }
    },
    "allOf": [
        {
            "$ref": "#/$definitions/conpair_options"
        }
    ]
}
